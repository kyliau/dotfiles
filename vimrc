syntax enable
filetype on
au BufNewFile,BufRead *.rvt set filetype=tcl

set number

set colorcolumn=80

set smarttab
set autoindent
filetype plugin indent on
set tabstop=2
set shiftwidth=2
set softtabstop=2
"set expandtab

colorscheme desert
"colorscheme elflord 

set hlsearch

set cursorline

set nowrap

set laststatus=2
